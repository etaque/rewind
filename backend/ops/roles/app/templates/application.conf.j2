http {
    port = ${REWIND_HTTP_PORT}
    address = "127.0.0.1"
}

db {
    uri = "jdbc:postgresql://localhost/{{ db_name }}"
    user = "{{ db_user }}"
    password = "{{ secrets.pg_password }}"
}

grib-storage {
    region = "{{ grib_storage.region }}"
    bucket = "{{ grib_storage.bucket }}"
    key-id = "{{ shared_secrets.grib_storage.key_id }}"
    secret = "{{ shared_secrets.grib_storage.secret }}"
}

sync {
{% if sync_enabled %}
    enabled = true
{% else %}
    enabled = false
{% endif %}
    healthcheck = "{{ shared_secrets.grib_storage.sync_healthcheck }}"
}

