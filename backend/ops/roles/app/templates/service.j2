[Unit]
Description=Rewind Backend
After=network.target

[Service]
Environment=REWIND_HTTP_PORT={{ http_port }}
ExecStart={{ app_dir }}/{{ current_name }}/bin/rewind -Dconfig.file={{ conf_dir }}/application.conf -Dlogback.configurationFile={{ conf_dir }}/logback-{{ current_name }}.xml
Restart=on-failure
SuccessExitStatus=143

[Install]
WantedBy=default.target
