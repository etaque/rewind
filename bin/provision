#!/usr/bin/env bash
set -e

cd $(dirname "$0")/../ops

if [ "$1" == "prod" ]; then
  read -r -p "Are you sure? [y/N] " response

  if [[ "$response" =~ ^([yY][eE][sS]|[yY])$ ]]
  then
    ansible-playbook -i hosts.yml --extra-vars "@secrets/shared.yml" --extra-vars "@secrets/prod.yml" deploy-prod.yml
  fi

else
  echo "Usage: $0 prod"
  exit 1

fi

