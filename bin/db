#!/usr/bin/env bash
set -e

cd $(dirname "$0")/..

bin/container ensure
source dev-env

PGHOST=$(nixos-container show-ip rewind)
PGUSER=rewind
PGDATABASE=rewind

if [ "$1" == "console" ]; then
  psql

elif  [ "$1" == "migrate" ]; then
  flyway migrate
  
else
  echo "Usage: $0 console|migrate"
  exit 1

fi

