<configuration>
  <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

  <appender name="rolling" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>{{ log_dir }}/{{ app_name }}-{{ current_name }}.log</file>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>{{ log_dir }}/{{ app_name }}-{{ current_name }}.%d{yyyy-MM-dd}.gz</fileNamePattern>
      <maxHistory>60</maxHistory>
      <totalSizeCap>10GB</totalSizeCap>
    </rollingPolicy>

    <append>true</append>

    <encoder>
      <pattern>%date{HH:mm:ss} %-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="rolling"/>
  </root>

  <logger name="org.http4s.blaze" level="WARN" />
</configuration>
